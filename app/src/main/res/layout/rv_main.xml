<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="layoutManager 三个item切换效果"
        android:background="@color/colorAccent"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_scroll_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="滑动到指定位置 solution-1"
        android:background="@color/colorAccent"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_scroll_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="滑动到指定位置 solution-2"
        android:background="@color/colorAccent"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btn_scroll_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="滑动到指定位置 solution-3"
        android:background="@color/colorAccent"
        android:layout_margin="15dp"/>

</LinearLayout>