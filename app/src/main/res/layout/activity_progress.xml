<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <com.gy.commonviewdemo.cusview.progress.ArcProgress
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:inner_stroke_width="10dp"
        app:out_stroke_with="15dp"
        app:out_stroke_color="@color/colorPrimary"
        app:inner_stroke_color="@color/colorPrimary"
        app:arc_angle="300"
        android:text="120%"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/color_3cc864"
        android:gravity="center"/>


</LinearLayout>