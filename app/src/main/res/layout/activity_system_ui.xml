<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_sys_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="获取状态栏高度"
        android:background="@color/colorAccent"/>

    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_sys_bar_gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="状态栏隐藏获取高度"
        android:background="@color/colorAccent"/>


    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_show_hide_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="显示/隐藏状态栏"
        android:background="@color/colorAccent"/>

    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_show_hide_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="显示/隐藏导航栏栏"
        android:background="@color/colorAccent"/>

    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_show_hide_ime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="显示/隐藏虚拟键盘"
        android:background="@color/colorAccent"/>

    <Button
        android:layout_margin="15dp"
        android:id="@+id/btn_status_light"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置 System bar 前景亮色/暗色"
        android:background="@color/colorAccent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_test"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorAccent"/>
</LinearLayout>